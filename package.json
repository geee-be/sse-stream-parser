{
  "name": "@geee-be/sse-stream-parser",
  "version": "1.0.0",
  "description": "Tiny zero-dependency Server-Sent Events (SSE) stream parser for browsers and Node.js.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist || true",
    "prepublishOnly": "pnpm build",
    "changeset": "changeset",
    "version": "changeset version && pnpm build",
    "release": "changeset publish",
    "test": "vitest run --reporter=dot",
    "test:watch": "vitest"
  },
  "keywords": [
    "sse",
    "server-sent events",
    "eventsource",
    "event-stream",
    "stream",
    "parser",
    "fetch",
    "web streams",
    "readablestream",
    "typescript",
    "esm",
    "cjs",
    "zero-dependency"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.6.5",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geee-be/sse-stream-parser.git"
  },
  "bugs": {
    "url": "https://github.com/geee-be/sse-stream-parser/issues"
  },
  "homepage": "https://github.com/geee-be/sse-stream-parser#readme",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@types/node": "^20.19.9",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "sourcemap": true,
    "clean": true,
    "splitting": false,
    "minify": false
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
